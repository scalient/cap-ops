log_level                       :info
log_location                    STDOUT
ssl_verify_mode                 :verify_none
chef_server_url                 "http://localhost:4000"

signing_ca_cert                 <%= prefix.dump %> "/var/chef-server/ca/cert.pem"
signing_ca_key                  <%= prefix.dump %> "/var/chef-server/ca/key.pem"
couchdb_database                "chef"

cookbook_tarball_path           <%= prefix.dump %> "/var/chef-server/cookbook-tarballs"
sandbox_path                    <%= prefix.dump %> "/var/chef-server/sandboxes"
checksum_path                   <%= prefix.dump %> "/var/chef-server/checksums"
cache_type                      "BasicFile"
cache_options                   :path => <%= prefix.dump %> "/var/chef-server/checksums"

file_cache_path                 <%= prefix.dump %> "/var/chef-server/cache"
node_path                       <%= prefix.dump %> "/var/chef-server/nodes"
openid_store_path               <%= prefix.dump %> "/var/chef-server/openid/store"
openid_cstore_path              <%= prefix.dump %> "/var/chef-server/openid/cstore"
search_index_path               <%= prefix.dump %> "/var/chef-server/search_index"
role_path                       <%= prefix.dump %> "/var/chef-server/roles"

validation_client_name          "chef-validator"
validation_key                  <%= prefix.dump %> "/etc/chef-server/validation.pem"
client_key                      <%= prefix.dump %> "/etc/chef-server/client.pem"
web_ui_client_name              "chef-webui"
web_ui_key                      <%= prefix.dump %> "/etc/chef-server/webui.pem"

web_ui_admin_user_name          "admin"
web_ui_admin_default_password   <%= chef_server_password.dump %>

umask 0022
